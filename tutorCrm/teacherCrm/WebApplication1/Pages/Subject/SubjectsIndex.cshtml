@page "/subjects"
@model SubjectsIndexModel
@{
    ViewData["Title"] = "Все предметы";
}

<div class="subjects-container">
    <h1>Все предметы</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert">@Model.Message</div>
    }

    <div class="subjects-list">
        @foreach (var subject in Model.Subjects)
        {
            <div class="subject-card">
                <h2>@subject.Name</h2>
                <p>@subject.Description</p>
                <form method="post">
                    <input type="hidden" name="id" value="@subject.Id" />
                    <button type="submit" asp-page-handler="Subscribe">Подписаться</button>
                </form>
            </div>
        }
    </div>
</div>

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 50px;
        font-family: Arial, sans-serif;
        background-color: #fdfdfd;
    }

    .subjects-container {
        max-width: 800px;
        width: 100%;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .alert {
        background-color: #ffecd1;
        border: 1px solid #f5b26b;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        color: #8a4b08;
    }

    .subjects-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .subject-card {
        border: 1px solid #ff9800;
        padding: 15px;
        border-radius: 8px;
        width: 250px;
        background-color: #fff7e6;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s;
    }

        .subject-card:hover {
            transform: translateY(-3px);
        }

        .subject-card h2 {
            margin-top: 0;
            color: #ff9800;
        }

        .subject-card button {
            background-color: #ff9800;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .subject-card button:hover {
                background-color: #e68900;
            }
</style>
