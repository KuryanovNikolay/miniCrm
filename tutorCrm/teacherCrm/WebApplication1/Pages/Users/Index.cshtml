@page
@model UsersIndexModel

<h2>Пользователи</h2>

<table>
    <thead>
        <tr><th>Имя</th><th>Email</th><th>Действия</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.Id">Редактировать</a> |
                    <a asp-page="./Delete" asp-route-id="@user.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create">Создать нового пользователя</a>
