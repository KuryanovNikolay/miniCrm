@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="register-container">
    <h2 class="text-center">Регистрация</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post" class="register-form">
        <div class="form-group">
            <label>Имя пользователя</label>
            <input asp-for="Input.Username" class="form-control large-input" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Input.Email" class="form-control large-input" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Полное имя</label>
            <input asp-for="Input.FullName" class="form-control large-input" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Телефон</label>
            <input asp-for="Input.PhoneNumber" class="form-control large-input" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>ФИО родителя</label>
            <input asp-for="Input.ParentFullName" class="form-control large-input" />
            <span asp-validation-for="Input.ParentFullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Контакт родителя</label>
            <input asp-for="Input.ParentContact" class="form-control large-input" />
            <span asp-validation-for="Input.ParentContact" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Пароль</label>
            <input asp-for="Input.Password" class="form-control large-input" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-orange btn-lg btn-block">Зарегистрироваться</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .register-container {
        max-width: 550px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border: 4px solid #ff6600; /* толстая рамка вокруг формы */
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(255, 102, 0, 0.2);
        color: #000000; /* черный текст */
    }

    h2 {
        color: #000000; /* черный заголовок */
        font-weight: bold;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    .form-group label {
        font-size: 1.1rem;
        font-weight: 600;
        color: #000000;
    }

    .large-input {
        padding: 16px;
        font-size: 1.1rem;
        border: none; /* убираем рамку вокруг полей */
        border-radius: 10px;
        color: #000000;
        background-color: #fefefe;
        box-shadow: inset 0 0 3px rgba(0,0,0,0.1);
        width: 100%;
        margin-bottom: 15px;
        transition: box-shadow 0.3s;
    }

        .large-input:focus {
            box-shadow: inset 0 0 6px rgba(255,102,0,0.4);
            outline: none;
        }

    .btn-orange {
        background-color: #ff6600;
        color: white;
        border: none;
        padding: 14px;
        font-size: 1.2rem;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

        .btn-orange:hover {
            background-color: #e65c00;
        }
</style>
